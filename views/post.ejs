<head>
  <title><%= data.metaTitle %></title>
  <meta name="description" content="<%= data.metaDescription %>">
  <meta name="keywords" content="<%= data.keywords.join(', ') %>">
  
  <!-- Open Graph (OG) meta tags for better social media sharing -->
  <meta property="og:title" content="<%= data.ogTitle || data.metaTitle %>">
  <meta property="og:description" content="<%= data.ogDescription || data.metaDescription %>">
  <meta property="og:image" content="<%= data.ogImage || data.headerImage %>">
  <meta property="og:type" content="article">
  <meta property="og:url" content="<%= 'https://yourwebsite.com/post/' + data.slug %>">

  <!-- Twitter Card meta tags -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="<%= data.ogTitle || data.metaTitle %>">
  <meta name="twitter:description" content="<%= data.ogDescription || data.metaDescription %>">
  <meta name="twitter:image" content="<%= data.ogImage || data.headerImage %>">
</head>

<div class="post-page">
  <div class="post-content">
    
    <div class="post-image" style="width: 100%; text-align: center; margin: 20px 0;">
      <% if (data.headerImage) { %>
        <img src="<%= data.headerImage %>" alt="Header Image" style="width: 100%; max-width: 1200px; height: auto;" />
      <% } %>
    </div>
    <div class="post-info">
      <h1 class="post-title"><%= data.title %></h1>

      <div class="post-meta">
        <p><strong><%= data.author %></strong> | <strong><%= new Date(data.createdAt).toLocaleDateString() %></strong> | <strong><%= data.sports.join(', ') %></strong> | <strong><%= data.leagues.join(', ') %></strong></p>
        <div class="social-links">
          <a href="https://youtube.com/your-channel" target="_blank" rel="noopener noreferrer">YouTube</a> | 
          <a href="https://instagram.com/your-profile" target="_blank" rel="noopener noreferrer">Instagram</a> | 
          <a href="https://x.com/your-profile" target="_blank" rel="noopener noreferrer">X (Twitter)</a> | 
          <a href="https://tiktok.com/@your-profile" target="_blank" rel="noopener noreferrer">TikTok</a>
        </div>
      </div>
    </div>
    
    <article class="article">
      <p> <%- data.body %></p>
            <!-- Comments link -->
      <div class="comment-section">
        <a href="/post/<%= data.slug %>/comments" class="comments-link">View or Add Comments</a>
      </div>
      
    </article>
  </div>
    <aside class="sidebar">
      <!-- Recent Posts Section -->
      <div class="sidebar-section">
        <h3>Recent Posts</h3>
        <ul class="recent-posts">
          <% latestPosts.forEach(function(post) { %>
            <li>
              <a href="/post/<%= post.slug %>"><%= post.title %></a>
            </li>
          <% }); %>
        </ul>
      </div>
      <!-- Sports Section -->
      <div class="sidebar-section">
        <h3>Sports</h3>
        <ul class="sports-list">
            <li>
              <a href="">MMA</a>
            </li>
            <li>
              <a href="">BOXING</a>
            </li>
            <li>
              <a href="">BJJ</a>
            </li>
            <li>
              <a href="">KICKBOXING</a>
            </li>
            <li>
              <a href="">MUAY THAI</a>
            </li>
            <li>
              <a href="">GRAPPLING</a>
            </li>
        </ul>
      
    
      <!-- Categories Section -->
      <div class="sidebar-section">
        <h3>Leagues</h3>
        <ul class="categories-list">
            <li>
              <a href="">UFC</a>
            </li>
            <li>
              <a href="">PFL</a>
            </li>
            <li>
              <a href="">ONE</a>
            </li>
            <li>
              <a href="">UFC</a>
            </li>
            <li>
              <a href="">UFC</a>
            </li>
        </ul>
      </div>
    </aside>
  </div>
</div>
<script>
  app.get('/post/:slug', (req, res) => {
  Post.findOne({ slug: req.params.slug })
    .then(post => {
      if (!post) return res.status(404).send('Post not found');
      
      // Get the latest posts for the sidebar
      Post.find().sort({ createdAt: -1 }).limit(5)
        .then(latestPosts => {
          res.render('post', { 
            data: post, 
            latestPosts 
          });
        });
    })
    .catch(err => console.log(err));
});
