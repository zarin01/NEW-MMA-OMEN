<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Stay updated with the latest MMA news, events, and highlights from UFC, Bellator, ONE Championship, and more.">
    <meta name="keywords" content="MMA, UFC, Bellator, ONE Championship, PFL, Boxing, Kickboxing, Muay Thai, Jiu-Jitsu, Wrestling">
    <meta name="author" content="MMA OMEN">
    <meta property="og:title" content="MMA OMEN - Latest MMA News and Updates">
    <meta property="og:description" content="Discover the latest news, fight highlights, and articles from the world of MMA, including UFC, Bellator, and more.">
    <meta property="og:image" content="/path/to/og-image.jpg"> <!-- Update with actual image path -->
    <meta property="og:url" content="https://www.yourmmablog.com"> <!-- Update with actual URL -->
    <title>MMA OMEN</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>

    <!-- Featured Posts Section -->
    <section class="featured-posts">
        <div class="featured-post">
            <img src="<%= featuredPosts[0].headerImage %>" alt="<%= featuredPosts[0].title %>" class="featured-image">
            <div class="overlay-text">
              <h2><a href="/post/<%= featuredPosts[0].slug %>"><%= featuredPosts[0].title %></a></h2>
              <p class="post-date"><%= featuredPosts[0].createdAt.toDateString() %></p>
            </div>
        </div>
        <div class="featured-post">
            <img src="<%= featuredPosts[1].headerImage %>" alt="<%= featuredPosts[1].title %>" class="featured-image">
            <div class="overlay-text">
              <h2><a href="/post/<%= featuredPosts[1].slug %>"><%= featuredPosts[1].title %></a></h2>
              <p class="post-date"><%= featuredPosts[1].createdAt.toDateString() %></p>
            </div>
        </div>
    </section>
 
    <!-- Columns Section -->
    <div class="category-columns">
      <ul class="three-column-grid">
          <% ufcPosts.slice(0, 3).forEach(post => { %>
          <li class="post-split">
              <div class="post-overlay">
                  <img src="<%= post.headerImage %>" alt="<%= post.title %>" class="grid-image">
                  <div class="overlay-text">
                      <h3><a href="/post/<%= post.slug %>"><%= post.title %></a></h3>
                      <p class="post-date"><%= post.createdAt.toDateString() %></p>
                  </div>
              </div>
          </li>
          <% }) %>
      </ul>
    </div>

    
    <div class="column-second">
      <ul class="three-column-grid">
          <% mmaPosts.slice(0, 3).forEach(post => { %>
          <li class="post-split">
              <div class="post-overlay">
                  <img src="<%= post.headerImage %>" alt="<%= post.title %>" class="grid-image">
                  <div class="overlay-text">
                      <h3><a href="/post/<%= post.slug %>"><%= post.title %></a></h3>
                      <p class="post-date"><%= post.createdAt.toDateString() %></p>
                  </div>
              </div>
          </li>
          <% }) %>
      </ul>
  </div>
  

  <div class="home">
    <div class="home-content">
  

    <!-- Latest Posts Section -->
    <section class="articles latest-post">
        <h2 class="articles__heading">Latest Posts</h2>
        <ul class="article-ul">
            <% latestPosts.forEach(post => { %>
                <li class="article-item">
                  <a href="/post/<%= post.slug %>"></a>
                    <img src="<%= post.headerImage %>" alt="<%= post.title %>" class="article-image" />
                    <div class="article-details">
                            <h3><%= post.title %></h3>
                        <span class="article-list__date"><%= post.createdAt.toDateString() %> | </span>
                        <span class="article-list__author">By <%= post.author %></span>
                        <p class="article-list__excerpt"><%- post.body.split(' ').slice(0, 30).join(' ') %></p>
                    </div>
                  </a>
                </li>
            <% }) %>
        </ul>

        <% if (nextPage !== null) { %>
            <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
        <% } %>
    </section>
    </strong>
    </strong>

    </div>
   
    <aside class="sidebar">
      <!-- Recent Posts Section -->
      <div class="sidebar-section">
        <h3>Recent Posts</h3>
        <ul class="recent-posts">
          <% latestPosts.forEach(function(post) { %>
            <li>
              <a href="/post/<%= post.slug %>"><%= post.title %></a>
            </li>
          <% }); %>
        </ul>
      </div>
    
      <!-- Sports Section -->
      <div class="sidebar-section">
        <h3>Sports</h3>
        <ul class="sports-list">
            <li>
              <a href="">MMA</a>
            </li>
            <li>
              <a href="">BOXING</a>
            </li>
            <li>
              <a href="">BJJ</a>
            </li>
            <li>
              <a href="">KICKBOXING</a>
            </li>
            <li>
              <a href="">MUAY THAI</a>
            </li>
            <li>
              <a href="">GRAPPLING</a>
            </li>
        </ul>
      </div>
    
      <!-- Categories Section -->
      <div class="sidebar-section">
        <h3>Leagues</h3>
        <ul class="categories-list">
            <li>
              <a href="">UFC</a>
            </li>
            <li>
              <a href="">PFL</a>
            </li>
            <li>
              <a href="">ONE</a>
            </li>
            <li>
              <a href="">UFC</a>
            </li>
            <li>
              <a href="">UFC</a>
            </li>
        </ul>
      </div>
    </aside>
    
  
  </div>

</body>
</html>
