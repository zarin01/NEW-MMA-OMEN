<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tiny.cloud/1/5zm60qesc6jws996dbi74dh260hjywix02k6ofi6mpgmm85d/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <title>MMA OMEN</title>
</head>
<body>
  <div class="home">
    <div class="home-content">
       <!-- Columns Section -->
    <div class="category-columns">
      <div class="column-first">
        <h2>UFC Posts</h2>
        <ul>
          <% if (ufcPosts.length > 0) { %>
            <!-- First post (full-width image) -->
            <li class="post-featured">
              <img src="<%= ufcPosts[0].headerImage %>" alt="<%= ufcPosts[0].title %>" class="full-width-image">
              <h3><a href="/post/<%= ufcPosts[0].slug %>"><%= ufcPosts[0].title %></a></h3>
              <div class="category-post-meta">
                <p>By <%= ufcPosts[0].author %></p>
                <p class="post-date"><%= ufcPosts[0].createdAt.toDateString() %></p>
              </div>   
            </li>
          
            <!-- Remaining posts (image on left, text on right) -->
            <% ufcPosts.slice(1, 5).forEach(post => { %>
              <li class="post-split">
                <div class="split-image">
                  <img src="<%= post.headerImage %>" alt="<%= post.title %>" class="left-image">
                </div>
                <div class="split-content">
                  <h3><a href="/post/<%= post.slug %>"><%= post.title %></a></h3>
                  <div class="category-post-meta">
                    <p>By <%= post.author %></p>
                    <p class="post-date"><%= post.createdAt.toDateString() %></p>
                  </div>   
                </div>
              </li>
            <% }) %>
          <% } %>
        </ul>
      </div>
    
      <div class="column-second">
        <h2>MMA Posts</h2>
        <ul>
          <% if (mmaPosts.length > 0) { %>
            <!-- First post (full-width image) -->
            <li class="post-featured">
              <img src="<%= mmaPosts[0].headerImage %>" alt="<%= mmaPosts[0].title %>" class="full-width-image">
              <h3><a href="/post/<%= mmaPosts[0].slug %>"><%= mmaPosts[0].title %></a></h3>
              <div class="category-post-meta">
                <p>By <%= mmaPosts[0].author %></p>
                <p class="post-date"><%= mmaPosts[0].createdAt.toDateString() %></p>
              </div>    
            </li>
          
            <!-- Remaining posts (image on left, text on right) -->
            <% mmaPosts.slice(1, 5).forEach(post => { %>
              <li class="post-split">
                <div class="split-image">
                  <img src="<%= post.headerImage %>" alt="<%= post.title %>" class="left-image">
                </div>
                <div class="split-content">
                  <h3><a href="/post/<%= post.slug %>"><%= post.title %></a></h3>
                  <div class="category-post-meta">
                    <p>By <%= post.author %></p>
                    <p class="post-date"><%= post.createdAt.toDateString() %></p>
                  </div>   
                </div>
              </li>
            <% }) %>
          <% } %>
        </ul>
      </div>
    </div>

  

    <!-- Latest Posts Section -->
    <section class="articles latest-post">
        <h2 class="articles__heading">Latest Posts</h2>
        <ul class="article-ul">
            <% latestPosts.forEach(post => { %>
                <li class="article-item">
                    <img src="<%= post.headerImage %>" alt="<%= post.title %>" class="article-image" />
                    <div class="article-details">
                        <a href="/post/<%= post.slug %>">
                            <h3><%= post.title %></h3>
                        </a>
                        <span class="article-list__date"><%= post.createdAt.toDateString() %> | </span>
                        <span class="article-list__author">By <%= post.author %></span>
                        <p class="article-list__excerpt"><%- post.body.split(' ').slice(0, 30).join(' ') %></p>
                    </div>
                </li>
            <% }) %>
        </ul>

        <% if (nextPage !== null) { %>
            <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
        <% } %>
    </section>


    </div>
   
    <aside class="sidebar">
      <!-- Recent Posts Section -->
      <div class="sidebar-section">
        <h3>Recent Posts</h3>
        <ul class="recent-posts">
          <% latestPosts.forEach(function(post) { %>
            <li>
              <a href="/posts/<%= post.id %>"><%= post.title %></a>
            </li>
          <% }); %>
        </ul>
      </div>
    
      <!-- Sports Section -->
      <div class="sidebar-section">
        <h3>Sports</h3>
        <ul class="sports-list">
            <li>
              <a href="">MMA</a>
            </li>
            <li>
              <a href="">BOXING</a>
            </li>
            <li>
              <a href="">BJJ</a>
            </li>
            <li>
              <a href="">KICKBOXING</a>
            </li>
            <li>
              <a href="">MUAY THAI</a>
            </li>
            <li>
              <a href="">GRAPPLING</a>
            </li>
        </ul>
      </div>
    
      <!-- Categories Section -->
      <div class="sidebar-section">
        <h3>Leagues</h3>
        <ul class="categories-list">
            <li>
              <a href="">UFC</a>
            </li>
            <li>
              <a href="">PFL</a>
            </li>
            <li>
              <a href="">ONE</a>
            </li>
            <li>
              <a href="">UFC</a>
            </li>
            <li>
              <a href="">UFC</a>
            </li>
        </ul>
      </div>
    </aside>
    
  
  </div>

</body>
</html>
