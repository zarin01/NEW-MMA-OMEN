<div class="admin-title">
  <% if (Role === 'admin') { %>
    <h2>Posts</h2>
    <a href="/add-post" class="button">+ Add New</a>
  <% } else { %>
    <div class="user-profile">
      <h2>User Information</h2><br>
      <p>Welcome, <%= user.username %>! Hereâ€™s your information:</p>
      <ul>
        <li><%= user.username %></li>
        <li><%= user.role %></li>
      </ul>
    </div>
    
    

  <% } %>
</div>

<% if (Role === 'admin') { %>
  <ul class="admin-posts">
    <% data.forEach(post => { %>
      <li>
        <a href="/post/<%= post.slug %>">
          <%= post.title %> &nearr;
        </a>
        <div class="admin-post-controls">
          <a href="/edit-post/<%= post.slug %>" class="btn">Edit</a>
          <form action="/delete-post/<%= post.slug %>?_method=DELETE" method="POST">
            <input type="submit" value="Delete" class="btn-delete btn">
          </form>
        </div>
      </li>
    <% }) %>
  </ul>
<% } %>
