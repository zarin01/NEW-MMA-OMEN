
<div class="post-page">
  <div class="post-content">
    
    <div class="post-image" style="width: 100%; text-align: center; margin: 20px 0;">
      <% if (data.headerImage) { %>
        <img src="<%= data.headerImage %>" alt="Header Image" style="width: 100%; max-width: 1200px; height: auto;" />
      <% } %>
    </div>
    <div class="post-info">
      <h1 class="post-title"><%= data.title %></h1>

      <div class="post-meta">
        <p><strong><%= data.author %></strong> | <strong><%= new Date(data.createdAt).toLocaleDateString() %></strong> | <strong><%= data.categories.join(', ') %></strong></p>
      </div>
    </div>
    
    <article class="article">
      <p> <%- data.body %></p>
            <!-- Comments link -->
      <div class="comment-section">
        <a href="/post/<%= data.slug %>/comments" class="comments-link">View or Add Comments</a>
      </div>
      
    </article>
  </div>
    <aside class="sidebar">
      <!-- Recent Posts Section -->
      <div class="sidebar-section">
        <h3>Recent Posts</h3>
        <ul class="recent-posts">
          <% latestPosts.forEach(function(post) { %>
            <li>
              <a href="/post/<%= post.slug %>"><%= post.title %></a>
            </li>
          <% }); %>
        </ul>
      </div>
      <!-- Sports Section -->
      <div class="sidebar-section">
        <h3>Sports</h3>
        <ul class="sports-list">
            <li>
              <a href="">MMA</a>
            </li>
            <li>
              <a href="">BOXING</a>
            </li>
            <li>
              <a href="">BJJ</a>
            </li>
            <li>
              <a href="">KICKBOXING</a>
            </li>
            <li>
              <a href="">MUAY THAI</a>
            </li>
            <li>
              <a href="">GRAPPLING</a>
            </li>
        </ul>
      
    
      <!-- Categories Section -->
      <div class="sidebar-section">
        <h3>Leagues</h3>
        <ul class="categories-list">
            <li>
              <a href="">UFC</a>
            </li>
            <li>
              <a href="">PFL</a>
            </li>
            <li>
              <a href="">ONE</a>
            </li>
            <li>
              <a href="">UFC</a>
            </li>
            <li>
              <a href="">UFC</a>
            </li>
        </ul>
      </div>
    </aside>
  </div>
</div>